# Database
DATABASE_URL=postgresql://walleca:password@localhost:5432/walleca

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Server
PORT=3000
NODE_ENV=development
AUTO_START_OCR_WORKER=true

# Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# OCR
OCR_LANG=jpn+eng
OCR_CONCURRENCY=1
OCR_LOG_PROGRESS=false
OCR_MULTI_PASS=true
OCR_IMAGE_MAX_WIDTH=2200
OCR_BINARY_THRESHOLD=170
